<link href='https://fonts.googleapis.com/css?family=Montserrat' rel='stylesheet'>
<style>
	div {
		font-family: 'Montserrat';
	}
</style>
<div class="pg-bg">
	<h1 class="text-decoration-line-through p-1 text-end">Articles</h1>
	<% @articles.each do |article| %>
		<div class="row justify-content-md-center">
			<div class="col-6 mt-4">	
				<div class="container">
					<div class="card text-center shadow-lg mb-5 rounded">
						<div class="card-header fst-italic">
							by <strong><%= article.user.username %></strong>
						</div>
						<div class="card-body">
							<h5 class="card-title"><%= link_to article.title, article_path(article), class: "text-secondary no-dec" %></h5>
							<p class="card-text"><%= truncate(article.description, length: 100) %></p>
							<div class="justify-content-center" id="at-btns">
								<%= button_to 'View', article_path(article), method: :get, class: "btn btn-outline-success mx-1" %>
								<%= button_to 'Edit', edit_article_path(article), method: :get, class: "btn btn-outline-primary mx-1" %>
								<%= button_to 'Delete', article_path(article), method: :delete, form: {data: {turbo_confirm: "Are you sure you wanns delete this article?"}}, class: "btn btn-outline-danger mx-1" %>
							</div>
						</div>
						<div class="card-footer text-body-secondary">
							<small>Created at <%= time_ago_in_words(article.created_at) %> ago, edited <%= time_ago_in_words(article.updated_at) %> ago</small>
						</div>
					</div>
				</div>
			</div>	
		</div>
	<% end %>