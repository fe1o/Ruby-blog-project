<div class="container">
	<div class="row justify-content-center">	
		<div class="col-10">
			<%= render 'shared/errors' %>
				<%= form_with scope: :article, class: "shadow p-3 mb-3 bg-placeholder rounded", url: articles_path, local: true do |f| %>
					<div class="row mb-3">
						<%= f.label :title, class: "col-2 col-form-label text-light fw-bold" %>
						<div class="col-10">
							<%= f.text_field :title, class: "form-control shadow-lg rounded", placeholder: "Title of article" %>
						</div>
					</div>

					<div class="row mb-3">
							<%= f.label :description, class: "col-2 col-form-label text-light fw-bold"  %>
						<div class="col-10">
							<%= f.text_area :description, rows: 10, class: "form-control shadow-lg rounded", placeholder: "Description of article" %>
						</div>
					</div>
					<div class="text-center">
						<%= f.submit class: "btn btn-primary btn-lg shadow-lg" %>
					</div>
				<% end %>
		</div>
		<%= link_to '[ Cancel ]', articles_path, class: "text-secondary text-center no-dec" %>
	</div>
</div>